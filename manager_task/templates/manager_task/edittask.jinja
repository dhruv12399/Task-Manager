{% extends 'manager_task/base.jinja' %}

{% block title %}Edit Task{% endblock %}

{% block content %}

	<div class="jumbotron">
  		<h2 class="display-4">EDIT TASK</h2>
  	</div>

  <form method="post">
	{% csrf_token %}
	<div class="form-group">
		{{ form.task_name.errors }}
		<label for="{{ form.task_name.id_for_label }}">Task name:</label>
		<input type="text" name="task_name" required id="id_task_name" maxlength="100" value = "{{existing_name}}" />
	</div>
	<div class="form-group">
		{{ form.complete_by.errors }}
		<label for="{{ form.complete_by.id_for_label }}">Deadline:</label>
		<input type="text" name="complete_by" required id="id_complete_by" value="{{existing_deadline.strftime('%d-%m-%Y')}}" />
	</div>
	<button type="submit" class="btn btn-primary">EDIT</button>
  </form>

  

{% endblock %}